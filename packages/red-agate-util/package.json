{
  "name": "red-agate-util",
  "private": false,
  "version": "0.3.0",
  "description": "red-agate utilities library.",
  "keywords": [],
  "main": "./bin/index.js",
  "module": "./modules/index.js",
  "modules.root": "./modules",
  "types": "./bin/index.d.ts",
  "typings": "./bin/index.d.ts",
  "engines": {
    "node": ">=8.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.7",
    "@babel/preset-env": "^7.8.7",
    "@types/jasmine": "^3.5.9",
    "@types/node": "^13.9.1",
    "babel-loader": "^8.0.6",
    "cross-env": "^7.0.2",
    "jasmine": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "mkdirp": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "shx": "^0.3.2",
    "source-map-loader": "^0.2.4",
    "ts-loader": "^6.2.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11"
  },
  "scripts": {
    "clean": "run-s clean:cjs clean:esm clean:spec",
    "clean:cjs": "rimraf ./bin",
    "clean:esm": "rimraf ./modules",
    "clean:spec": "rimraf ./bin.test",
    "build": "run-s build:cjs build:cjs:2 build:cjs:3 build:esm build:esm:2 build:esm:3 build:esm:4 build:esm:5 build:esm:6 build:esm:7 build:spec",
    "build:cjs": "tsc --module commonjs --target es2015 --outDir bin --declaration --declarationDir ./bin",
    "build:cjs:2": "shx mkdir bin/runtime/commonjs",
    "build:cjs:3": "shx cp -f src/runtime/commonjs/require-cjs.js bin/runtime/commonjs/require-cjs.js",
    "build:esm": "tsc --outDir modules --declaration --declarationDir ./modules",
    "build:esm:2": "node -e \"require('../../build-scripts/copy-as-mjs').copyAsMjs('modules','modules')\"",
    "build:esm:3": "shx mkdir ./modules/runtime/commonjs",
    "build:esm:4": "shx cp -f src/runtime/commonjs/require-cjs.js modules/runtime/commonjs/require-cjs.js",
    "build:esm:5": "shx cp -f src/runtime/commonjs/require-cjs.js modules/runtime/commonjs/require-cjs.cjs",
    "build:esm:6": "shx cp ../../build-scripts/pkg.json ./modules/package.json",
    "build:esm:7": "shx cp ../../build-scripts/pkg-cjs.json ./modules/runtime/commonjs/package.json",
    "build:spec": "webpack-cli --mode=development --config webpack.config.js",
    "build:spec2": "tsc -p tsconfig.spec.json --module commonjs --target es2015 --outDir bin.test",
    "lint": "tslint ./src/**/*.ts -t verbose",
    "test": "jasmine",
    "prepublishOnly": "run-s clean build test",
    "ncu": "ncu -u"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shellyln/red-agate.git"
  },
  "author": "shellyln",
  "homepage": "https://shellyln.github.io/",
  "bugs": {
    "url": "https://github.com/shellyln/red-agate/issues"
  },
  "license": "ISC"
}
